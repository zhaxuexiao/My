<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />  //visibility gone 隐藏
    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello world"
        android:textSize="40sp"
        android:paddingTop="10dp"
        />
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
        android:paddingTop="10dp"
       >
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_weight="1"
        android:paddingTop="@dimen/activtty_pad"
        android:paddingBottom="@dimen/activtty_pad"
        />
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_weight="1"
        android:paddingTop="@dimen/activtty_pad"
        android:paddingBottom="@dimen/activtty_pad"/>
    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_weight="1"
        android:paddingTop="@dimen/activtty_pad"
        android:paddingBottom="@dimen/activtty_pad"/>
    <Button
           android:id="@+id/buttonJia"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="+"
        android:layout_weight="1"
        android:paddingTop="@dimen/activtty_pad"
        android:paddingBottom="@dimen/activtty_pad"/>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"

        >
        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_weight="1"
            android:paddingTop="@dimen/activtty_pad"
            android:paddingBottom="@dimen/activtty_pad"
            />
        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_weight="1"
            android:paddingTop="@dimen/activtty_pad"
            android:paddingBottom="@dimen/activtty_pad"
            />
        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_weight="1"
            android:paddingTop="@dimen/activtty_pad"
            android:paddingBottom="@dimen/activtty_pad"
            />
        <Button
            android:id="@+id/buttonJian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_weight="1"
            android:paddingTop="@dimen/activtty_pad"
            android:paddingBottom="@dimen/activtty_pad"
            />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:paddingTop="10dp"
    >
    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_weight="1"
        android:paddingTop="@dimen/activtty_pad"
        android:paddingBottom="@dimen/activtty_pad"
        />
    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:layout_weight="1"
        android:paddingTop="@dimen/activtty_pad"
        android:paddingBottom="@dimen/activtty_pad"/>
    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:layout_weight="1"
        android:paddingTop="@dimen/activtty_pad"
        android:paddingBottom="@dimen/activtty_pad"
        />
    <Button
            android:id="@+id/buttonCheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
        android:layout_weight="1"
        android:paddingTop="@dimen/activtty_pad"
        android:paddingBottom="@dimen/activtty_pad"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        >
        <Button
            android:id="@+id/buttonDian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:layout_weight="1"
            android:paddingTop="@dimen/activtty_pad"
            android:paddingBottom="@dimen/activtty_pad"/>
        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="1"
            android:paddingTop="@dimen/activtty_pad"
            android:paddingBottom="@dimen/activtty_pad"
            />
        <Button
            android:id="@+id/buttonC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:layout_weight="1"
            android:paddingTop="@dimen/activtty_pad"
            android:paddingBottom="@dimen/activtty_pad"
            />
        <Button
            android:id="@+id/buttonChu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:layout_weight="1"
            android:paddingTop="@dimen/activtty_pad"
            android:paddingBottom="@dimen/activtty_pad"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"

        >
        <Button
            android:id="@+id/buttonDeng"
            android:layout_width="510px"
            android:layout_height="wrap_content"
            android:text="="
            android:layout_weight="1"
            android:paddingTop="@dimen/activtty_pad"
            android:paddingBottom="@dimen/activtty_pad"
            android:background="@drawable/pressed"

            />

    </LinearLayout>
</LinearLayout>